{{#if hbsObject.appliances.latest.createdAt}}
<div class="item">
  <div class="wrapper">
    <div class="image">
      <h3>
        <a href="#" class="title">Appliances</a>
      </h3>
      <a href="#" class="image-wrapper background-image">
          <img src="{{hbsObject.appliances.latest.image}}" alt="">
      </a>
    </div>
    <div class="price">${{hbsObject.appliances.latest.price}}</div>
    <div class="meta">
      <figure>
        <i class="fa fa-calendar-o"></i>{{momentFromNowTime hbsObject.appliances.latest.createdAt}}
      </figure>
      <figure>
        <a href="#">
          <i class="fa fa-user"></i>{{hbsObject.appliances.latest.email}}
        </a>
      </figure>
    </div>
    <div class="description">
      <p>{{hbsObject.appliances.latest.details}}</p>
    </div>
    <div class="additional-info">
      <ul>
        <li>
          <figure>Latest Post</figure>
          <aside>{{momentFromNowTime hbsObject.appliances.latest.createdAt}}</aside>
        </li>
        <li>
          <figure>Total number of appliances listed</figure>
          <aside>{{hbsObject.appliances.classifiedCount}}</aside>
        </li>
      </ul>
    </div>
  </div>
</div>
{{/if}}
